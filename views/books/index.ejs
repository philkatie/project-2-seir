<%- include('../partials/header') %> 
<br>

<div class="banner">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 id="review-banner">Welcome To The Bookshelf</h1>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <% books.forEach(function(b) { %>
            <div class="col-md-4">
                <br>
                <div class="card">
                    <img class="card-img-top" src="<%= b.imageUrl %>" alt="<%= b.title %> Cover">
                    <div class="card-body index-card">
                        <div class="row">
                            <h5 class="card-title"><%= b.title %></h5>
                        </div>
                        <div class="row">
                            <div class="col-8">
                                <p class="card-text"><%= b.author %> </p>
                            </div>
                            <div class="col-4">
                                <a class="details" href="/books/<%= b._id %>">DETAILS</a>
                            </div>
                        </div>
                    </div>
                </div>
                <br>
            </div>
        <% }); %> 
    </div>
</div>


<%- include('../partials/footer') %> 