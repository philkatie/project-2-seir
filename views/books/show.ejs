<%- include('../partials/header') %> 

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src=<%= book.imageUrl %> >
        </div>
        <div class="col-md-6">
            <h3><%= book.title %> </h3>
            <h4><%= book.author %> </h4>
            <p><%= book.description %> </p>
            <ul>
                <li><%= book.releaseYear %> </li>
                <li><%= book.pageCount %> pages</li>
                <li><%= book.genre %> </li>
            </ul>
        </div>
    </div>
</div>

<div class="banner">
    <div class="container">
        <div class="row">
            <h1>Reviews for <%= book.title %> </h1>
        </div>
    </div>
</div>









<%- include('../partials/footer') %> 