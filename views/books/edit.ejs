<%- include('../partials/header') %> 
<div class="row">
    <br>
    <br>
    <div class="col-2"></div>
    <div class="col-8">
        <h1>Edit your review of <%= bookDoc.title %> :</h1>
    </div>
    <div class="col-2"></div>
    <br>
</div>
<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <div class="card mb-3 leave-review-card">
            <form id="edit-review-form" action="/reviews/<%= review._id %>?_method=PUT" method="POST">
                <div class="row">
                    <div class="col-md-10">
                        <textarea name="content"><%= review.content %> </textarea>
                    </div>
                    <div class="col-md-2">
                        <label>Rating:</label>
                        <br>
                        <select name="rating">
                            <option value="5">5</option>
                            <option value="4">4</option>
                            <option value="3">3</option>
                            <option value="2">2</option>
                            <option value="1">1</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12" id="submit-review-col">
                        <input id="submit-review" type="submit" value="Update Review">
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="col-2"></div>
</div>



<%- include('../partials/footer') %> 